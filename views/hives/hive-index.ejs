<div>
  <h1> </h1>
  <p>WELCOME TO <%= title %></p>

  <% if (userInfo) { %>
    <p> HELLO, <%= userInfo.firstName %>. </p>
  <% } %>


</div>

<h1> Your Hives </h1>

<div>
  <ul>
    <% if (userInfo) { %>
      <a href="/hives/new">Create a new Hive </a> <br/><br/>

      <% } else { %>
        <li> <a href="/signup">Sign Up</a> </li>
        <li> <a href="/login">Log In My Friend</a> </li>
        <% } %>
  </ul>
</div>

<% hives.forEach((oneHive) => { %>
<div class="hive-container">
  <ul style="list-style: none;">
      <li>
        <h2> <%= oneHive.name %> </h2>
        <p>  <%= oneHive.dateCreated %> </p>
        <p> <%= oneHive.comment %>     </p>
      </li>
        <li> <a href="/hives/<%= oneHive._id %>/edit"> Edit Hive </a> </li>

        <form action="/hives/<%= oneHive._id %>/delete" method="post">
        <button class="delete-btn" type="submit"> Delete </button>

      <li> <a href="/hives/<%= oneHive._id %>/inspections"> Inspections</a>
        <hr>
  </ul>
</div>
<% }) %>
