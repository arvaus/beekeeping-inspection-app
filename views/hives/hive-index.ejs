<h1> </h1>
<p>Welcome to <%= title %></p>

<% if (userInfo) { %>
  <p> Welcome, <%= userInfo.firstName %>. </p>
<% } %>

<div>
  <ul>
    <% if (userInfo) { %>
      <a href="/hives/new"> Create a new Hive </a> <br/><br/>

      <% } else { %>
        <li> <a href="/signup">Sign Up</a> </li>
        <li> <a href="/login">Log In My Friend</a> </li>
        <% } %>
  </ul>
</div>

<h1> Your Hives </h1>

<% hives.forEach((oneHive) => { %>
<div class="hive-container">
  <ul>
      <li>
        <h2> <%= oneHive.name %> </h2>
        <p> <%= oneHive.dateCreated %> </p>
        <p> <%= oneHive.comment %>     </p>
      </li>
        <form action="/hives/<%= oneHive._id %>/delete" method="post">
              <button class="delete-btn" type="submit"> Delete </button>
        <li> <a href="/hives/<%= oneHive._id %>/edit"> Edit Hive </a> </li>

      <li> <a href="http://bashert.us/wp-content/uploads/2015/06/UnderConstruction.png"> Inspect this!</a> </li>

      <hr>
  </ul>
</div>
<% }) %>
