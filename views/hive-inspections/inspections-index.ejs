<h1> </h1>
<p>Welcome to <%= title %></p>

<% if (userInfo) { %>
  <p> Welcome, <%= userInfo.firstName %>. </p>

<% } %>

<h1> Your Hive Inspections </h1>

<ul>
  <% hives.forEach((oneHive) => { %>
    <li>
      <h2> <%= oneHive.name %> </h2>
      <p> <%= oneHive.dateCreated %> </p>
      <p> <%= oneHive.comment %>     </p>
    </li>
    <li> <a href="inspections/edit-inspections-view"> Edit Hive Inspection </a> </li>
    <% }) %>

</ul>


<ul>
  <% if (userInfo) { %>
    <a href="/inspections/new"> Create a new Hive </a> <br/><br/>

    <li> <a href="/hives/index"> My Hives </a> </li>

    <li> <a href="/logout">Log Out</a> </li>

  <% } else { %>
    <li> <a href="/signup">Sign Up</a> </li>
    <li> <a href="/login">Log In My Friend</a> </li>
  <% } %>
</ul>
