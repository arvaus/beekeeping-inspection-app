<h1> </h1>
<p>Welcome to <%= title %></p>

<% if (userInfo) { %>
  <p> Welcome, <%= userInfo.firstName %>. </p>

<% } %>

<h1> Your Hive Inspections </h1>
<a href="/inspections/new"> New Inspection </a> <br/><br/>

<ul>
  <% hives.forEach((oneInspection) => { %>
    <li>
      <h2> <%= oneInspection.name %> </h2>
      <p> <%= oneInspection.dateCreated %> </p>
      <p> <%= oneInspection.comment %>     </p>
    </li>
    <li> <a href="inspections/edit-inspections-view"> Edit Hive Inspection </a> </li>
    <form action="/products/<%= oneProduct._id %>/delete" method="post">
            <button type="submit"> Delete </button>
    <% }) %>

</ul>


<ul>
  <% if (userInfo) { %>

    <li> <a href="/hives/index"> My Hives </a> </li>

    <li> <a href="/logout">Log Out</a> </li>

  <% } else { %>
    <li> <a href="/signup">Sign Up</a> </li>
    <li> <a href="/login">Log In My Friend</a> </li>
  <% } %>
</ul>
